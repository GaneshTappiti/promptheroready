# Production Environment Configuration
# React-style naming convention for better compatibility
# Copy this file to .env.local and fill in your actual production values

# Application Configuration
REACT_APP_NAME="PromptHeroReady"
REACT_APP_VERSION="1.0.0"
REACT_APP_ENVIRONMENT=production
NODE_ENV=production

# API Configuration
REACT_APP_API_BASE_URL=https://api.promptheroready.com
REACT_APP_API_TIMEOUT=30000

# Supabase Configuration (Production)
# Replace with your production Supabase project
REACT_APP_SUPABASE_URL=your_production_supabase_project_url_here
REACT_APP_SUPABASE_ANON_KEY=your_production_supabase_anon_key_here

# Database Configuration
DATABASE_URL=postgresql://production-db-connection-string
REACT_APP_DATABASE_URL=postgresql://production-db-connection-string

# Security Configuration (REQUIRED)
REACT_APP_ENCRYPTION_KEY=your-production-encryption-key-32-chars-minimum

# AI Provider API Keys (Production)
REACT_APP_OPENAI_API_KEY=your-production-openai-key
REACT_APP_GEMINI_API_KEY=your-production-gemini-key
REACT_APP_CLAUDE_API_KEY=your-production-claude-key
REACT_APP_ANTHROPIC_API_KEY=your-production-anthropic-key
REACT_APP_DEEPSEEK_API_KEY=your-production-deepseek-key

# Production Features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_GOOGLE_ANALYTICS_ID=your-production-ga-id

# Monitoring & Error Reporting
REACT_APP_SENTRY_DSN=your-production-sentry-dsn
REACT_APP_FEATURE_FLAGS=production=true

# Mobile & PWA Configuration
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_MOBILE_OPTIMIZATIONS=true

# Production-specific settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false
REACT_APP_HOT_RELOAD=false

# CDN & Asset Configuration
REACT_APP_CDN_URL=https://cdn.promptheroready.com
REACT_APP_STATIC_ASSETS_URL=https://assets.promptheroready.com
