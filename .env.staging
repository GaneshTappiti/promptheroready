# Staging Environment Configuration
# React-style naming convention for better compatibility

# Application Configuration
VITE_APP_NAME="PromptHeroReady"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT=staging
NODE_ENV=production

# API Configuration
VITE_API_BASE_URL=https://staging-api.promptheroready.com
VITE_API_TIMEOUT=30000

# Supabase Configuration (Staging)
# Replace with your staging Supabase project
VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-staging-supabase-anon-key

# Database Configuration
DATABASE_URL=postgresql://staging-db-connection-string
VITE_DATABASE_URL=postgresql://staging-db-connection-string

# Security Configuration
VITE_ENCRYPTION_KEY=your-staging-encryption-key-32-chars-min

# AI Provider API Keys (Staging - use test keys)
VITE_OPENAI_API_KEY=your-staging-openai-key
VITE_GEMINI_API_KEY=your-staging-gemini-key
VITE_CLAUDE_API_KEY=your-staging-claude-key
VITE_ANTHROPIC_API_KEY=your-staging-anthropic-key
VITE_DEEPSEEK_API_KEY=your-staging-deepseek-key

# Staging Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_GOOGLE_ANALYTICS_ID=your-staging-ga-id

# Monitoring & Error Reporting
VITE_SENTRY_DSN=your-staging-sentry-dsn
VITE_FEATURE_FLAGS=staging=true,beta=true

# Mobile & PWA Configuration
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_MOBILE_OPTIMIZATIONS=true

# Staging-specific settings
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
VITE_HOT_RELOAD=false
