# Staging Environment Configuration
# React-style naming convention for better compatibility

# Application Configuration
REACT_APP_NAME="PromptHeroReady"
REACT_APP_VERSION="1.0.0"
REACT_APP_ENVIRONMENT=staging
NODE_ENV=production

# API Configuration
REACT_APP_API_BASE_URL=https://staging-api.promptheroready.com
REACT_APP_API_TIMEOUT=30000

# Supabase Configuration (Staging)
# Replace with your staging Supabase project
REACT_APP_SUPABASE_URL=https://your-staging-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-staging-supabase-anon-key

# Database Configuration
DATABASE_URL=postgresql://staging-db-connection-string
REACT_APP_DATABASE_URL=postgresql://staging-db-connection-string

# Security Configuration
REACT_APP_ENCRYPTION_KEY=your-staging-encryption-key-32-chars-min

# AI Provider API Keys (Staging - use test keys)
REACT_APP_OPENAI_API_KEY=your-staging-openai-key
REACT_APP_GEMINI_API_KEY=your-staging-gemini-key
REACT_APP_CLAUDE_API_KEY=your-staging-claude-key
REACT_APP_ANTHROPIC_API_KEY=your-staging-anthropic-key
REACT_APP_DEEPSEEK_API_KEY=your-staging-deepseek-key

# Staging Features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_GOOGLE_ANALYTICS_ID=your-staging-ga-id

# Monitoring & Error Reporting
REACT_APP_SENTRY_DSN=your-staging-sentry-dsn
REACT_APP_FEATURE_FLAGS=staging=true,beta=true

# Mobile & PWA Configuration
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_MOBILE_OPTIMIZATIONS=true

# Staging-specific settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false
REACT_APP_HOT_RELOAD=false
